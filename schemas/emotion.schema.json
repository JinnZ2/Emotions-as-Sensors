{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jinnz2.github.io/emotions-as-sensors/schemas/emotion.schema.json",
  "title": "Emotion Atoms & Composites",
  "type": "object",
  "definitions": {
    "atom": {
      "type": "string",
      "enum": [
        "anger","shame","grief","abandonment","love","compassion","joy",
        "admiration","fear","surprise","peace","contentment","longing",
        "forgiveness","trust","excitement","despair"
      ]
    },
    "decayModel": {
      "type": "string",
      "enum": ["exponential","cyclical","resonant","immortal","transformative"]
    },
    "energyImpact": {
      "type": "string",
      "enum": ["adds","conserves","depletes"]
    },
    "composite": {
      "type": "object",
      "required": ["name","atoms","temporal","decay","energy"],
      "properties": {
        "name": { "type": "string" },
        "atoms": {
          "type": "array",
          "items": { "$ref": "#/definitions/atom" },
          "minItems": 2
        },
        "temporal": {
          "type": "string",
          "enum": ["unresolved_persistence","acute","phasic"]
        },
        "decay": { "$ref": "#/definitions/decayModel" },
        "energy": { "$ref": "#/definitions/energyImpact" },
        "transformation_protocol": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Steps to convert negative persistence into usefulness (e.g., ritual, task, boundary, story)."
        },
        "notes": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
 
